<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6495ED"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/directionAndStrengthTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="日出日落"
            android:textColor="#ffffff"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.cxyzy.lib.ui.sunrise.SunriseSunset
            android:id="@+id/sunriseSunset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="@id/directionAndStrengthTv"
            app:layout_constraintTop_toBottomOf="@id/directionAndStrengthTv"
            app:lineColor="#ffffff"
            app:sunColor="#ff9800"
            app:timeTextColor="#ffffff"
            app:timeTextSize="11sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>